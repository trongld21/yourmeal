<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:background="@color/retro_background"
    tools:context=".MainActivity">

    <!-- Họ và Tên -->
    <TextView
        android:id="@+id/labelFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ và Tên"
        android:textSize="16sp"
        android:textColor="@color/retro_text"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/retro_input"
        android:textColor="@color/retro_text"
        android:layout_below="@id/labelFullName"/>

    <!-- Email -->
    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        android:textColor="@color/retro_text"
        android:layout_marginTop="16dp"
        android:layout_below="@id/fullname"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/retro_input"
        android:textColor="@color/retro_text"
        android:layout_below="@id/labelEmail"/>

    <!-- Số điện thoại -->
    <TextView
        android:id="@+id/labelPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textSize="16sp"
        android:textColor="@color/retro_text"
        android:layout_marginTop="16dp"
        android:layout_below="@id/email"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/retro_input"
        android:textColor="@color/retro_text"
        android:layout_below="@id/labelPhone"/>

    <!-- Tên đăng nhập -->
    <TextView
        android:id="@+id/labelUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập"
        android:textSize="16sp"
        android:textColor="@color/retro_text"
        android:layout_marginTop="16dp"
        android:layout_below="@id/phone"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/retro_input"
        android:textColor="@color/retro_text"
        android:layout_below="@id/labelUsername"/>

    <!-- Mật khẩu -->
    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="16sp"
        android:textColor="@color/retro_text"
        android:layout_marginTop="16dp"
        android:layout_below="@id/username"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/retro_input"
        android:textColor="@color/retro_text"
        android:layout_below="@id/labelPassword"/>

    <!-- Nhập lại mật khẩu -->
    <TextView
        android:id="@+id/labelRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại mật khẩu"
        android:textSize="16sp"
        android:textColor="@color/retro_text"
        android:layout_marginTop="16dp"
        android:layout_below="@id/password"/>

    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/retro_input"
        android:textColor="@color/retro_text"
        android:layout_below="@id/labelRePassword"/>

    <!-- Nút Đăng Ký -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="14dp"
        android:background="@drawable/retro_button"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_below="@id/repassword"/>

    <!-- Nút Đăng Nhập -->
    <Button
        android:id="@+id/btnSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignup"
        android:layout_marginTop="16dp"
        android:background="@drawable/retro_button_secondary"
        android:padding="12dp"
        android:text="Đã có tài khoản? Đăng nhập ngay."
        android:textColor="@color/retro_text"
        android:textSize="14sp"/>

</RelativeLayout>
